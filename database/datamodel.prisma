type Accounting {
  id: ID! @id
  customer: Customer! @relation(link: INLINE)
  date: DateTime!
  finalPrice: Float!
  paid: Boolean!
  paymentType: String!
}

type Activity {
  id: ID! @id
  name: String!
  description: String!
  hotel: Hotel! @relation(link: INLINE)
  endHour: DateTime!
  startHour: DateTime!
}

type Booking {
  id: ID! @id
  bookedRooms: [BookedRoom!]!
  comment: String
  customer: Customer! @relation(link: INLINE)
  endDate: DateTime!
  startDay: DateTime!
  price: Float!
}

type Customer {
  id: ID! @id
  accountings: [Accounting!]!
  bookings: [Booking!]! 
  email: String! @unique
  identificationDocument: String!
  name: String!
  orders: [Order!]!
  phoneNumber: String!
  reports: [Report!]!
  surname: String!
}

type Hotel {
  id: ID! @id
  activities: [Activity!]!
  address: String!
  description: String!
  email: String! @unique
  name: String!
  phoneNumber: String!
  products: [Product!]! 
  rooms: [Room!]! 
  services: [Service!]! 
  users: [User!]! 
  website: String
}

type Order {
  id: ID! @id
  comment: String
  customer: Customer! @relation(link: INLINE)
  date: DateTime!
  finalPrice: Float!
  productsOrdered: [ProductOrdered!]!
  status: String!
  statusComment: String
}

type Product {
  id: ID! @id
  available: Boolean!
  name: String!
  description: String!
  hotel: Hotel! @relation(link: INLINE)
  price: Float!
  productType: String!
  productsOrdered: [ProductOrdered!]!
}

type ProductOrdered {
  id: ID! @id
  comments: String
  price: Float!
  quantity: Int!

  productId: ID!
  product: Product! @relation(link: INLINE)

  orderId: ID!
  order: Order! @relation(link: INLINE)
}

type Report {
  id: ID! @id
  customer: Customer! @relation(link: INLINE)
  date: DateTime!
  description: String!
  status: String!
}

type Room {
  id: ID! @id
  bookedRooms: [BookedRoom!]!
  floorNumber: Int!
  hotel: Hotel! @relation(link: INLINE)
  price: Float!
  roomNumber: Int!
  roomType: String!
}

type BookedRoom {
  id: ID! @id

  roomId: ID!
  room: Room! @relation(link: INLINE)

  bookingId: ID!
  booking: Booking! @relation(link: INLINE)
}

type Service {
  id: ID! @id
  description: String!
  name: String!
  hotel: Hotel! @relation(link: INLINE)
}

type User {
  id: ID! @id
  hotel: Hotel! @relation(link: INLINE)
  name: String!
  surname: String!
  userType: String!
}
